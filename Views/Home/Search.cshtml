@{
    ViewBag.Title = "Search A Movie";
}

@model Assignment3.Models.ApplicationResponse

<form asp-action="Search" method="post">
    <div>
        <label asp-for="Category">Category</label>
        <input asp-for="Category"/>
    </div>

    <div>
        <label asp-for="Title">Title</label>
        <input asp-for="Title" />
    </div>

    <div>
        <label asp-for="Year">Year</label>
        <input asp-for="Year" />
    </div>

    <div>
        <label asp-for="Director">Director</label>
        <input asp-for="Director" />
    </div>

    <div>
        <label asp-for="Rating">Rating</label>
        <select asp-for="Rating">
            <option>Select One</option>
            <option value="">G</option>
            <option value="">PG</option>
            <option value="">PG-13</option>
            <option value="">R</option>
        </select>
    </div>

    <div>
        <label asp-for="Edited">Edited</label>
        <input asp-for="Edited" />
    </div>

    <div>
        <label asp-for="LentTo">Lent To:</label>
        <input asp-for="LentTo" />
    </div>

    <div>
        <label asp-for="Notes">Notes</label>
        <input asp-for="Notes" />
    </div>

    <button type="submit">Submit Your Movie Search</button>
</form>