@{
    ViewBag.Title = "Edit A Movie";
}

@model Assignment3.Models.ApplicationResponse


<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="MovieId" value="@ViewBag.movieToEdit.MovieId" />
    <div>
        <label asp-for="Category">Category</label>
        <input asp-for="Category"  value="@ViewBag.movieToEdit.Category" required />
    </div>

    <div>
        <label asp-for="Title">Title</label>
        <input asp-for="Title"  value="@ViewBag.movieToEdit.Title"  required />
    </div>

    <div>
        <label asp-for="Year">Year</label>
        <input asp-for="Year"  value="@ViewBag.movieToEdit.Year" required />
    </div>

    <div>
        <label asp-for="Director">Director</label>
        <input asp-for="Director"  value="@ViewBag.movieToEdit.Director" required />
    </div>

    <div>
        <label asp-for="Rating">Rating</label>
        <select asp-for="Rating" required>
            <!option @if (ViewBag.movieToEdit.Rating == "ALL") { <text> selected="selected" </text> } value="">ALL</!option>
            <!option @if (ViewBag.movieToEdit.Rating == "G") { <text> selected="selected" </text> } value="G">G</!option>
            <!option @if (ViewBag.movieToEdit.Rating == "PG") { <text> selected="selected" </text> } value="PG">PG</!option>
            <!option @if (ViewBag.movieToEdit.Rating == "PG-13") { <text> selected="selected" </text> } value="PG-13">PG-13</!option>
            <!option @if (ViewBag.movieToEdit.Rating == "R") { <text> selected="selected" </text> } value="R">R</!option>
        </select>
    </div>

    <div>
        <label asp-for="Edited">Edited</label>
        <select asp-for="Edited">
            <!option value="false">Select an option</!option>
            <!option @if (ViewBag.movieToEdit.Edited == false) { <text> selected="selected" </text> } value="false">No</!option>
            <!option @if (ViewBag.movieToEdit.Edited == true) { <text> selected="selected" </text> } value="true">Yes</!option>
        </select>

    </div>

    <div>
        <label asp-for="LentTo">Lent To:</label>
        <input asp-for="LentTo" value="@ViewBag.movieToEdit.LentTo" />
    </div>

    <div>
        <label asp-for="Notes">Notes</label>
        <input asp-for="Notes" type="text" maxlength="25" value="@ViewBag.movieToEdit.Notes" />
    </div>

    <button type="submit">Submit Your Movie Search</button>

    <div asp-validation-summary="All"></div>
</form>
